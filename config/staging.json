{
  "schemaVersion": "1.0.0",
  "app": {
    "name": "TMDV",
    "environment": "staging"
  },
  "server": {
    "port": 8080,
    "baseUrl": "https://stg-api.tmdv.example.com",
    "corsAllowedOrigins": ["https://stg-app.tmdv.example.com"]
  },
  "frontend": {
    "publicUrl": "https://stg-app.tmdv.example.com"
  },
  "database": {
    "vendor": "oracle",
    "host": "stg-adb.tmdv.example.com",
    "port": 1522,
    "serviceName": "TMDVSTG_high",
    "userEnv": "DB_USER",
    "passEnv": "DB_PASSWORD",
    "sslMode": "require",
    "pool": { "min": 2, "max": 8, "idleMs": 30000 }
  },
  "auth": {
    "issuer": "https://stg-auth.tmdv.example.com/issuer",
    "audience": "tmdv-staging",
    "clientIdEnv": "OIDC_CLIENT_ID",
    "clientSecretEnv": "OIDC_CLIENT_SECRET"
  },
  "api": {
    "gatewayUrl": "https://stg-api.tmdv.example.com/api",
    "timeoutMs": 20000,
    "retries": 1
  },
  "features": {
    "chatbot": true,
    "dashboards": true,
    "notifications": true,
    "experimentalWearables": false
  },
  "logging": {
    "level": "info",
    "json": true,
    "trace": false
  },
  "telemetry": {
    "enabled": true,
    "otlpEndpointEnv": "OTLP_ENDPOINT"
  },
  "rateLimit": {
    "enabled": true,
    "requestsPerMin": 120
  },
  "cache": {
    "enabled": true,
    "ttlSeconds": 120
  },
  "thirdParty": {
    "telegram": {
      "botTokenEnv": "TELEGRAM_BOT_TOKEN",
      "webhookUrl": "https://stg-api.tmdv.example.com/webhook/telegram"
    }
  },
  "oci": {
    "region": "us-phoenix-1",
    "bucketAssets": "tmdv-stg-assets",
    "compartmentOcidEnv": "OCI_COMPARTMENT_OCID"
  }
}
